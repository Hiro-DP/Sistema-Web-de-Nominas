@model IEnumerable<Sistema_Web_de_Nominas.Dto.EmpleadoResponseDTO>
@{
    ViewData["Title"] = "Listado de Empleados";
}

<h1>Gestión de Empleados</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Empleado</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                <th>@Html.DisplayNameFor(model => model.NombreCompleto)</th>
                <th>@Html.DisplayNameFor(model => model.Cargo)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                    <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                    <td>
                        <a asp-action="Details" asp-route-cedula="@item.Cedula" class="btn btn-sm btn-info">Detalles</a> |
                        <a asp-action="Edit" asp-route-cedula="@item.Cedula" class="btn btn-sm btn-warning">Editar</a> |
                        <a asp-action="Delete" asp-route-cedula="@item.Cedula" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay empleados registrados.
    </div>
}