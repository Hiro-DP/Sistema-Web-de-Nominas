@model IEnumerable<Sistema_Web_de_Nominas.Dto.EmpleadoResponseDTO>
@{
    ViewData["Title"] = "Gestión de Empleados";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <button type="button" class="btn btn-primary" onclick="OpenModal('/Empleado/Create')">
            <i class="bi bi-plus-circle"></i> Nuevo Empleado
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover" id="empleadosTable">
            <thead>
                <tr>
                    <th>Cédula</th>
                    <th>Nombre Completo</th>
                    <th>Teléfono</th>
                    <th>Cargo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empleado in Model)
                {
                    <tr data-cedula="@empleado.Cedula">
                        <td>@empleado.Cedula</td>
                        <td>@empleado.NombreCompleto</td>
                        <td>@empleado.Telefono</td>
                        <td>@empleado.Cargo</td>
                        <td>
                            <a onclick="OpenModal('/Empleado/Edit?cedula=@empleado.Cedula')" class="btn btn-warning btn-sm mx-1">
                                <i class="fa fa-pencil"></i> Editar
                            </a>
                            <button class="btn btn-danger btn-sm" onclick="eliminarEmpleado('@empleado.Cedula')">
                                <i class="fa fa-trash"></i> Eliminar
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("_MostrarModal")

@section Scripts {
    <script src="~/js/show-modal.js"></script>
}