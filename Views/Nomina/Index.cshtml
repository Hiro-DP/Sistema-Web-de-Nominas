@model IEnumerable<Sistema_Web_de_Nominas.Dto.NominaResponseDTO>
@{
    ViewData["Title"] = "Historial de Nóminas";
}

<h1>Historial de Nóminas</h1>
<p>
    <a asp-action="Calculate" class="btn btn-success">Calcular Nueva Nómina</a>
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Código Nómina</th>
                <th>Cédula Empleado</th>
                <th>Salario Base</th>
                <th>Salario Neto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CodigoId)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmpleadoCedula)</td>
                    <td>@item.Salario.ToString("C2")</td>
                    <td>@item.SalarioNeto.ToString("C2")</td>
                    <td>
                        <a asp-action="Details" asp-route-codigoId="@item.CodigoId" class="btn btn-sm btn-info">Detalles</a> |
                        <a asp-action="Delete" asp-route-codigoId="@item.CodigoId" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay nóminas registradas.
    </div>
}